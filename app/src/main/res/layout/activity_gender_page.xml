<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenderPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#efefef"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Spinner
            android:id="@+id/genderspn"
            android:layout_width="410dp"
            android:layout_height="51dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/spinner_background"
        android:popupBackground="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/gensrchbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/genList"
            android:layout_width="413dp"
            android:layout_height="730dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gensrchbtn" />

        <Button
            android:id="@+id/gensrchbtn"
            style="@style/buttonstyles"
            android:layout_width="169dp"
            android:layout_height="65dp"
            android:layout_marginStart="120dp"
            android:layout_marginBottom="24dp"
            android:text="Apply"
            app:layout_constraintBottom_toTopOf="@+id/genList"
            app:layout_constraintStart_toStartOf="@+id/genderspn"
            app:layout_constraintTop_toBottomOf="@+id/genderspn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>